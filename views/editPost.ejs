<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quack</title>
</head>
<%- include('navbar') %>

<body>
        <div class="container">

                            <h1>Edit Post</h1>
                            <form method="post" action="/post/edit/<%= data.id %>">
                                <div class="input-group mb-3">
                                    <label class="input-group-text" for="inputGroupSelect01">Title</label>
                                    <input value="<%= data.title %>" type="text" class="form-control" aria-describedby="emailHelp" name="title">
                                </div>

                                <div class="input-group mb-3">
                                    <label class="input-group-text" for="inputGroupSelect01">Content</label>
                                    <input value="<%= data.content %>" type="text" class="form-control" aria-describedby="emailHelp" name="content">
                                </div>

                                  <div class="input-group mb-3">
                                    <label class="input-group-text" for="inputGroupSelect01">Tags</label>
                                    <select name="TagId" class="form-select" id="inputGroupSelect01">
                                        <% tags.forEach(element => { %>
                                        <option <%= element.id === data.TagId ? "selected" : "" %> value = "<%=element.id %>"> <%=element.name %> </option>
                                        <% }) %>
                                    </select>

                                  </div>
                                <div class="input-group mb-3">
                                    <label class="input-group-text" for="inputGroupSelect01">Image Url</label>
                                    <input value="<%= data.imgUrl %>"type="text" class="form-control" aria-describedby="emailHelp" name="imgUrl">
                                </div>
                                <button class="btn glass">Submit</button>
                            </form>
        </div>

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
            integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
            <%- include('_script') %>
</body>
</html>